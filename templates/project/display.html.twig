{% extends 'base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block body %}
    <div>
        <h1>{{ project.name }}</h1>
    </div>
    <div>
        {% set tasks = project.getTasks() %}
        {% for task in tasks %}
        <div>
            <h2>{{ task.name }}</h2>
            <p>
                date de début:  {{ task.startAt | date('d-m-Y')~' à '~ task.startAt | date('H:i') }}<br>
                date de fin: {{ task.endAt | date('d-m-Y')~' à '~ task.endAt | date('H:i') }}<br>
                facturé: {{ task.isInvoiced ? 'oui' : 'non' }}
            </p>
        </div>
        {% endfor %}
    </div>
{% endblock %}
